<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BasicMod" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PlantShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_light</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <!-- Custom styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Dark</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView.Dark</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.Dark</item>
    </style>

    <!-- Custom CardView style for dark mode -->
    <style name="Widget.App.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <!-- Custom BottomNavigationView style for dark mode -->
    <style name="Widget.App.BottomNavigationView.Dark" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="background">@color/surface_dark</item>
        <item name="itemIconTint">@color/bottom_nav_colors_dark</item>
        <item name="itemTextColor">@color/bottom_nav_colors_dark</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Custom TextInputLayout style for dark mode -->
    <style name="Widget.App.TextInputLayout.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_light</item>
        <item name="hintTextColor">@color/primary_light</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>
</resources>